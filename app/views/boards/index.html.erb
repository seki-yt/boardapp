<div class="container">
  <h1>All Board</h1>
  <% @boards.each do |board| %>
    <div class="card">
      <div class="card-title">
        <%= link_to board_path(id: board.id) do %>
          <p class = 'card-title-left'><%= board.title %></p>
        <% end %>
        <%= image_tag 'Combined Shape.png', :class => 'card-title-right dropbtn' %>
      </div>
        <div class="content">
          <p class = "card-content"><%= board.content %></p>
          <% if user_signed_in? && current_user.id == board.user_id %>
            <div class="content-drop drop-btn">
              <%= link_to 'Edit', edit_board_path(id: board.id), class: 'edit-text' %>
              <%= link_to 'Delete', board_path(board), data: { method: 'delete', confirm: '本当に削除しますか？' }, class: 'delete-text' %>
            </div>
          <% end %>
        </div>
      <%= image_tag 'Oval (1).png', :class => 'card-avatar' %>
    </div>
  <% end %>
  <%= link_to new_board_path do %>
    <div class="new-card">
      <p class="new-board">+ Add new board</p>
    </div>
  <% end %>
</div>
