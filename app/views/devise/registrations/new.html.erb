<div class="container">
  <h2 class="signTitle">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, :class => "text-title"%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'text' %>
    </div>

    <div class="field">
      <%= f.label :password, :class => "text-title" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", :class => 'text' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, :class => "text-title" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'text' %>
    </div>

    <div class="actions-sign">
      <%= f.submit "Sign up", :class => 'btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
