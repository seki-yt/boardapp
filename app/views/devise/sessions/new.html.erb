<div class="container">
  <h2 class="signTitle">Sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, :class => 'text-title' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'text' %>
    </div>

    <div class="field">
      <%= f.label :password, :class => 'text-title' %><br />
      <%= f.password_field :password, autocomplete: "current-password", :class => 'text' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, :class => 'text-title' %>
        <%= f.label :remember_me, :class => 'text' %>
      </div>
    <% end %>

    <div class="actions-sign">
      <%= f.submit "submit" , :class => 'btn-primary'%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>